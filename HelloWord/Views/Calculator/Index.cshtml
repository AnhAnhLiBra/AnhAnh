
@{
    ViewData["Title"] = "Máy tính cá nhân";
}

<h2>Máy tính cá nhân</h2>
<form asp-action="Calculate" asp-controller="Calculator" method="post">
    <input name="a" placeholder="Toán hạng a" value="@ViewBag.a"/>
    @{ 
        int op = ViewBag.op;
        string add = (op == '+') ? "selected" : "";
    }
    <select name="op" value="@ViewBag.op">
        <option>+</option>
        <option>-</option>
        <option>x</option>
        <option>:</option>
    </select>
    <input name="b" placeholder="Toán hạng b" value="@ViewBag.b"/>
    <input type="submit" value=" = " />
    <input placeholder="Kết quả" value="@ViewBag.KetQua" />
</form>

